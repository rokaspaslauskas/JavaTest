package failai;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileReader;
import java.io.IOException;
import java.io.InputStreamReader;
public class newRead{
	public static void main(String[]args)throws IOException{
		File failas=new File("src/failas.txt");
		readFile1(failas);
		
		}
	public static String apversk(String var) {
		
		StringBuilder vardas = new StringBuilder();
		vardas.append(var);    
		vardas.reverse();
		String vardas2 = vardas.toString();
		return vardas2;
		
	}
	private static String readFile1(File fin)throws IOException{
			FileInputStream fis=new FileInputStream(fin);// Construct
			BufferedReader br = new BufferedReader(new InputStreamReader(fis));
			String line = null;
			while ((line = br.readLine()) != null) {
				System.out.println(line);
				return line;
				}
			return "";
//			br.close();
		
	}

