
public class traciaPaskaita1 {

	public static void main(String[] args) {
		
		String a = "JAVA programavimo kursas";
		
		System.out.println("Paskutinis antro þodþio simbolis: "+ a.substring(16, 17));
		System.out.println("Pirmas treèio þodþio simbolis: "+ a.substring(18, 19));
		System.out.println("Pirmas sakinio þodis: "+ a.substring(0, 5));
		System.out.println("Paskutinis þodis: "+ a.substring(17));
		System.out.println("Sakinys su pakeistomis \"a\" á \"@\": " + a.replace('a', '@'));
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
