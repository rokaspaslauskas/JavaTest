import java.util.Scanner;

public class Programa {

	public static void main(String[] args) {
		Biudzetas biudzetas = new Biudzetas();
		boolean runProgram = true;

		biudzetas.firstMenu();
		Scanner sc = new Scanner(System.in);

		while (runProgram) {
			String task = sc.next();

			if (task.equals("1")) {
				System.out.println("(pajamuSuma, kategorija, pozymisArIBanka, papildomaInfo)");
				biudzetas.pridetiPajamuIrasa(sc.nextFloat(), sc.next(), sc.nextBoolean(), sc.next());
				biudzetas.menu();

			} else if (task.equals("2")) {
				System.out.println("(pajamuSuma, kategorija, pozymisArIBanka, papildomaInfo)");
				biudzetas.pridetiPajamuIrasa(sc.nextFloat(),  sc.next(), sc.nextBoolean(), sc.next());
				biudzetas.menu();

			} else if (task.equals("3")) {
				biudzetas.gautiPajamuIrasa();
				biudzetas.menu();

			} else if (task.equals("4")) {
				biudzetas.gautiIslaiduIsrasa();
				biudzetas.menu();

			} else if (task.equals("x")) {
				runProgram = false;
			}

		}

		sc.close();

	}

}
